# public/api/.htaccess

# Protect the configuration file containing the secret key
<Files "yoco.php">
    # For Apache 2.2 / Older servers
    Order Allow,Deny
    Deny from all

    # For Apache 2.4 / Newer servers
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</Files>

# Prevent directory listing (optional but recommended)
Options -Indexes